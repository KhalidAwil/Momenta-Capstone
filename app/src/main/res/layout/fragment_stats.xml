<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/stats_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/stats_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/stats_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/trends_spinner"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/trends_linechart"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/trends_day_pie_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stats_card"
        android:padding="7dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/dummy_content"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/trends_piechart"
        android:layout_height="300dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/trends_day_pie_textview"/>


</RelativeLayout>